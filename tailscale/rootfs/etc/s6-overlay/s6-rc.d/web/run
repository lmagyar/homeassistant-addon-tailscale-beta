#!/command/with-contenv bashio
# shellcheck shell=bash
export LOG_FD
# ==============================================================================
# Home Assistant Community App: Tailscale
# Runs tailscale web interface
# ==============================================================================
declare -a options

bashio::log.info 'Starting Tailscale web...'

# Get random port
options+=(--listen 127.0.0.1:25898)

# Use readonly webui mode
# Note: can be removed later, after most of the app config options are available through the webui
options+=(--readonly)

# Run Tailscale
exec /opt/tailscale web "${options[@]}"
